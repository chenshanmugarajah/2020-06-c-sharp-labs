<Window x:Class="lab_23_wpf_demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_23_wpf_demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Grid>
        <TextBox x:Name="TextHeader" HorizontalAlignment="Left" Margin="329,148,0,0" Text="Is Engineering66 good or not?" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <RadioButton x:Name="ButtonBad" Content="They are bad" HorizontalAlignment="Left" Margin="265,0,0,0" VerticalAlignment="Center"/>
        <RadioButton x:Name="ButtonGood" Content="They are good" HorizontalAlignment="Left" Margin="412,0,0,0" VerticalAlignment="Center" IsChecked="True"/>
        <Button x:Name="ButtonConfirm" Content="Confirm" HorizontalAlignment="Left" Margin="366,252,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
